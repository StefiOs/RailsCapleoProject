<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Song Library", products_path %></li>
        <% if logged_in? %>
          <li><%= link_to "My Playlists", user_path(@current_user, anchor: 'playlist-well') %></li>
          <li><%= link_to "Current Songs in Cart", user_path(@current_user, anchor: 'current-user-cart') %></li>
          <li>
            <%= link_to "Sign Out", logout_path, method: :delete %>
          </li>
        <% else %>
        <li><%= link_to "Sign In", login_path %></li>
        <li><%= link_to "Sign Up", signup_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
